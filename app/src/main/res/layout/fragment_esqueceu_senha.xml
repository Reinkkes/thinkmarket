<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.esqueceu_senha.esqueceuSenhaFragment">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:layout_marginTop="50dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/thinkblack" />

    <Button
        android:id="@+id/btnCadastro_EsqSenha"
        android:layout_width="320dp"
        android:layout_height="46dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="53dp"
        android:letterSpacing="0.2"
        android:text="Enviar Senha ➔"
        android:textSize="40px"
        app:backgroundTint="#B42828"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtfEmail_EsqSenha"
        tools:ignore="HardcodedText,PxUsage,UnusedAttribute" />

    <EditText
        android:id="@+id/txtfEmail_EsqSenha"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:autofillHints=""
        android:hint="Endereço de E-mail"
        android:inputType="textEmailAddress"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView1"
        tools:ignore="HardcodedText,TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.thinkmarket.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_homeFragment_to_actUsuarioInfo"
            app:destination="@id/actUsuarioInfo" />
        <action
            android:id="@+id/action_homeFragment_to_actOrdemInfo"
            app:destination="@id/actOrdemInfo" />
        <action
            android:id="@+id/action_homeFragment_to_actEmpresaInfo"
            app:destination="@id/actEmpresaInfo" />
        <action
            android:id="@+id/action_homeFragment_to_cadastroEmpresaFragment"
            app:destination="@id/cadastroEmpresaFragment" />
        <action
            android:id="@+id/action_homeFragment_to_actDadosUsuario"
            app:destination="@id/actDadosUsuario" />
        <action
            android:id="@+id/action_homeFragment_to_actServicoInfo"
            app:destination="@id/actServicoInfo" />
        <action
            android:id="@+id/action_homeFragment_to_actEmpresaPerfil"
            app:destination="@id/actEmpresaPerfil" />
        <action
            android:id="@+id/action_homeFragment_to_actCadastroServico"
            app:destination="@id/actCadastroServico" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.thinkmarket.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_cadastroUsuarioFragment"
            app:destination="@id/cadastroUsuarioFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_actEsqSenha"
            app:destination="@id/actEsqSenha" />
    </fragment>
    <fragment
        android:id="@+id/cadastroEmpresaFragment"
        android:name="com.example.thinkmarket.ui.cadastro_empresa.CadastroEmpresaFragment"
        android:label="fragment_cadastro_empresa"
        tools:layout="@layout/fragment_cadastro_empresa" />
    <fragment
        android:id="@+id/cadastroUsuarioFragment"
        android:name="com.example.thinkmarket.ui.cadastro_usuario.CadastroUsuarioFragment"
        android:label="fragment_cadastro_usuario"
        tools:layout="@layout/fragment_cadastro_usuario" >
        <action
            android:id="@+id/action_cadastroUsuarioFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/actOrdemInfo"
        android:name="com.example.thinkmarket.ActOrdemInfo"
        android:label="ActOrdemInfo" />
    <fragment
        android:id="@+id/actEmpresaInfo"
        android:name="com.example.thinkmarket.ActEmpresaInfo"
        android:label="ActEmpresaInfo" />
    <fragment
        android:id="@+id/actServicoInfo"
        android:name="com.example.thinkmarket.ActServicoInfo"
        android:label="ActServicoInfo" >
        <action
            android:id="@+id/action_actServicoInfo_to_actPagamento"
            app:destination="@id/actPagamento" />
    </fragment>
    <fragment
        android:id="@+id/actDadosUsuario"
        android:name="com.example.thinkmarket.ActDadosUsuario"
        android:label="ActDadosUsuario" />
    <fragment
        android:id="@+id/actEmpresaPerfil"
        android:name="com.example.thinkmarket.ActEmpresaPerfil"
        android:label="ActEmpresaPerfil" />
    <fragment
        android:id="@+id/actUsuarioInfo"
        android:name="com.example.thinkmarket.ActUsuarioInfo"
        android:label="usuario_info"
        tools:layout="@layout/usuario_info" />
    <fragment
        android:id="@+id/actCadastroServico"
        android:name="com.example.thinkmarket.ActCadastroServico"
        android:label="ActCadastroServico" />
    <fragment
        android:id="@+id/actPagamento"
        android:name="com.example.thinkmarket.ActPagamento"
        android:label="ActPagamento" />
    <fragment
        android:id="@+id/actEsqSenha"
        android:name="com.example.thinkmarket.ActEsqSenha"
        android:label="ActEsqSenha" >
        <action
            android:id="@+id/action_actEsqSenha_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>